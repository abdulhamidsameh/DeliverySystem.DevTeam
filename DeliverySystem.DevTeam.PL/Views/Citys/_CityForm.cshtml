@using DeliverySystem.DevTeam.PL.ViewModels.City


@model CityViewModal




<form asp-action="@(Model?.Id > 0 ? "Edit" :"Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-success="OnModalSuccess"
      data-ajax-failure="ShowErrorMessage">

    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />

    }

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
        <label for="floatingInput">Name</label>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>


    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="State" asp-for="State" />
        <label for="floatingInput">State</label>
        <span class="text-danger" asp-validation-for="State"></span>

    </div>

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="Description" asp-for="Country" />
        <label for="floatingInput">Country</label>
        <span class="text-danger" asp-validation-for="Country"></span>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
