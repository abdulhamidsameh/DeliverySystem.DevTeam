@using DeliverySystem.DevTeam.PL.ViewModels.Delivery
@model CreateOrUpdateDeliveryViewModel




<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
	  data-ajax-method="post" data-ajax="true"
	  data-ajax-success="OnModalSuccess"
	  data-ajax-failure="ShowErrorMessage">
	@if (Model?.Id > 0)
	{
		<input type="hidden" asp-for="Id" />
	}

	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
			<label asp-for="Name"></label>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="email" class="form-control" placeholder="Name" asp-for="Email" />
			<label asp-for="Email"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="text" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber" />
			<label asp-for="PhoneNumber"></label>
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
	</div>
	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="text" class="form-control" placeholder="Address" asp-for="Address" />
			<label asp-for="Address"></label>
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
	</div>

	<partial name="_ModalFooter" />
</form>



