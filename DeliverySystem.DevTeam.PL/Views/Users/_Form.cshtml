@model UserFormViewModel

<form asp-action="@(!string.IsNullOrEmpty(Model?.Id) ? "Edit" :"Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-success="OnModalSuccess"
      data-ajax-failure="ShowErrorMessage">

    @if (!string.IsNullOrEmpty(Model?.Id))
    {
        <input type="hidden" asp-for="Id" />

    }

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="Full Name" asp-for="FullName" />
        <label for="floatingInput">Full Name</label>
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" />
        <label for="floatingInput">User Name</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-floating mb-7">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
        <label for="floatingInput">Email</label>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-5">
        <div class="mb-2">
            <select class="form-select form-select-solid js-select2" data-placeholder="Select Roles" asp-for="SelectedRoles" asp-items="@Model.Roles">

                <option>Select Roles</option>

            </select>
        
        </div>
        <span asp-validation-for="SelectedRoles" class="text-danger d-block"></span>
    </div>

    <div class="form-floating mb-7">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
        <label for="floatingInput">Password</label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>


    <div class="form-floating mb-7">
        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" />
        <label for="floatingInput">Confirm Password</label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>




    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>