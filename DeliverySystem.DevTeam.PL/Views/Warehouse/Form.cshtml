@using DeliverySystem.DevTeam.BLL.ViewModels.Warehouse

@model CreateOrUpdateWarehouseViewModel


@{
	ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")}  Warehouse"; ;
}


<div class="card shadow-sm">
	<div class="card-header">
		<h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Warehouse </h3>

	</div>
	<div class="card-body">


		<form method="post" asp-controller="Warehouse">

			@if (Model?.Id > 0)
			{
				<input type="hidden" asp-for="Id" />

			}

			<div class="form-floating mb-7">

				<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
				<label for="floatingInput">Name</label>
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>


			<div class="form-floating mb-7">

				<input type="text" class="form-control" placeholder="City" asp-for="City" />
				<label for="floatingInput">City</label>
				<span class="text-danger" asp-validation-for="City"></span>
			</div>

			<div class=" form-floating mb-7">

				<input type="text" class="form-control" placeholder="Manager" asp-for="Manager" />
				<label for="floatingInput">Manager</label>

				<span class="text-danger" asp-validation-for="Manager"></span>
			</div>

			<button type="submit" class="btn btn-sm btn-primary">
				<i class="bi bi-check2"></i>
				Save
			</button>
		</form>
	</div>

</div>
@section Scripts {

	<partial name="_ValidationScriptsPartial" />
}