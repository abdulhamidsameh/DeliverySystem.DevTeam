@model CreateOrUpdateMerchantViewModel

@{
	ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")} Merchant";
}


<div class="card shadow-sm">
	<div class="card-header">
		<h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Merchant</h3>

	</div>
	<div class="card-body">
		<form method="post" asp-controller="Merchants" asp-action="Create">
			@if(Model?.Id > 0)
			{
				<input type="hidden" asp-for="Id" />
			}

			<div class="mb-5">
				<div class="form-floating mb-2">
					<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
					<label asp-for="Name"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-5">
			<div class="form-floating mb-2">
				<input type="email" class="form-control" placeholder="Name" asp-for="Email" />
				<label asp-for="Email"></label>
					<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			</div>
			<div class="mb-5">
			<div class="form-floating mb-2">
				<input type="text" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber" />
				<label asp-for="PhoneNumber"></label>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>
			</div>
			<div class="mb-5">
			<div class="form-floating mb-2">
				<input type="text" class="form-control" placeholder="Address" asp-for="Address" />
				<label asp-for="Address"></label>
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			</div>

			<button type="submit" class="btn btn-primary btn-sm">
				<i class="bi bi-check2"></i>
				Save</button>
		</form>
	</div>

</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}
