@using DeliverySystem.DevTeam.BLL.ViewModels.Merchant

@model CreatedOrUpdatedMerchantViewModel


@{
	ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")}  Product"; ;
}


<div class="card shadow-sm">
	<div class="card-header">
		<h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Merchant </h3>

	</div>
	<div class="card-body">


		<form method="post" asp-controller="Merchants">

			@if (Model?.Id > 0)
			{
				<input type="hidden" asp-for="Id" />

			}

			<div class="form-floating mb-7">

				<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
				<label for="floatingInput">Name</label>
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>


			<div class="form-floating mb-7">

				<input type="email" class="form-control" placeholder="Email" asp-for="Email" />
				<label for="floatingInput">Email</label>
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>

			<div class=" form-floating mb-7">

				<input type="number" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber" />
				<label for="floatingInput">PhoneNumber</label>

				<span class="text-danger" asp-validation-for="PhoneNumber"></span>
			</div>

			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>

</div>
@section Scripts {

	<partial name="_ValidationScriptsPartial" />
}