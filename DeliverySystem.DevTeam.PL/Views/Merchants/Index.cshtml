                        </svg>

                        Merchantss Not Found !!

                    </h5>

                </div>

            </div>
        }


        else
        {

            <div class="py-5 pb-6">
                <div class="table-responsive">
                    <table class="table table-row-bordered gy-7">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800">
                                <th>Name</th>
                                <th>Email</th>
                                <th>PhoneNumber</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>                            
                                    <td>@item.PhoneNumber</td>
                                   
                                     <td>
                                        <a asp-action="Edit" asp-controller="Merchants" asp-route-id="@item.Id" class=" btn btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary">

                                            Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Merchants" asp-route-id="@item.Id" class=" btn btn-outline btn-outline-dashed btn-outline-danger btn-active-light-primary">

                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>


        }

    </div>

</div>
