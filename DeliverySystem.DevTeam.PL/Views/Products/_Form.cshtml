@using DeliverySystem.DevTeam.PL.ViewModels.Products

@model CreateOrUodateProductViewModel




<form asp-action="@(Model?.Id > 0 ? "Edit" :"Create")"
   data-ajax-method="post"
   data-ajax="true"
      data-ajax-success="OnModalSuccess"
    data-ajax-failure="ShowErrorMessage"

>

    @if (Model?.Id > 0)
    {
            <input type="hidden" asp-for="Id" />

    }

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
        <label for="floatingInput">Name</label>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>


    <div class="form-floating mb-7">
        <input type="number" class="form-control" placeholder="Price" asp-for="Price" />
        <label for="floatingInput">Price</label>
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>

    <div class="form-floating mb-7">
        <input type="text" class="form-control" placeholder="Description" asp-for="Description" />
        <label for="floatingInput">Description</label>
        <span class="text-danger" asp-validation-for="Description"></span>

    </div>
    <div class="form-floating mb-7">
        <input type="number" class="form-control" placeholder="Quantity" asp-for="QuantityAvailable" />
        <label for="floatingInput">Quantity</label>
        <span class="text-danger" asp-validation-for="QuantityAvailable"></span>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
